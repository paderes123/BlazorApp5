@page "/"

<PageTitle>Passi City College - Home</PageTitle>

<!-- Header Section -->
<header class="bg-blue-800 text-white py-4 shadow-md">
    <div class="container mx-auto flex justify-between items-center px-4">
        <div class="flex items-center">
            <img src="https://via.placeholder.com/50" alt="Passi City College Logo" class="h-12 mr-4">
            <h1 class="text-2xl font-bold">Passi City College</h1>
        </div>
        <nav>
            <ul class="flex space-x-6">
                <li><a href="/" class="hover:text-blue-300">Home</a></li>
                <li><a href="/about" class="hover:text-blue-300">About</a></li>
                <li><a href="/programs" class="hover:text-blue-300">Programs</a></li>
                <li><a href="/contact" class="hover:text-blue-300">Contact</a></li>
            </ul>
        </nav>
    </div>
</header>

<!-- Hero Section -->
<section class="bg-gray-100 py-20 text-center">
    <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-blue-800 mb-4">Welcome to Passi City College</h2>
        <p class="text-lg text-gray-600 mb-6">Empowering the future through quality education and innovation in Passi City, Iloilo.</p>
        <a href="/admissions" class="bg-blue-600 text-white py-3 px-6 rounded-lg hover:bg-blue-700 transition">Apply Now</a>
    </div>
</section>

<!-- About Section -->
<section class="py-16">
    <div class="container mx-auto px-4">
        <h3 class="text-3xl font-bold text-center text-blue-800 mb-8">About Us</h3>
        <p class="text-gray-600 text-center max-w-2xl mx-auto">
            Passi City College is dedicated to providing accessible, high-quality education to students in Passi City and beyond.
            Our institution fosters academic excellence, personal growth, and community engagement through diverse programs and a supportive learning environment.
        </p>
    </div>
</section>

<!-- Programs Section -->
<section class="bg-gray-50 py-16">
    <div class="container mx-auto px-4">
        <h3 class="text-3xl font-bold text-center text-blue-800 mb-8">Our Programs</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="bg-white p-6 rounded-lg shadow-md">
                <h4 class="text-xl font-semibold text-blue-800 mb-4">Business Administration</h4>
                <p class="text-gray-600">Prepare for a dynamic career in business with our comprehensive programs in management, marketing, and entrepreneurship.</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-md">
                <h4 class="text-xl font-semibold text-blue-800 mb-4">Information Technology</h4>
                <p class="text-gray-600">Master the latest in software development, cybersecurity, and IT management with hands-on training.</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-md">
                <h4 class="text-xl font-semibold text-blue-800 mb-4">Education</h4>
                <p class="text-gray-600">Shape the future by training to become an educator with our innovative teaching programs.</p>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="py-16">
    <div class="container mx-auto px-4 text-center">
        <h3 class="text-3xl font-bold text-blue-800 mb-8">Get in Touch</h3>
        <p class="text-gray-600 mb-6">Have questions? Reach out to us for more information about our programs and admissions.</p>
        <a href="/contact" class="bg-blue-600 text-white py-3 px-6 rounded-lg hover:bg-blue-700 transition">Contact Us</a>
    </div>
</section>

<!-- Footer Section -->
<footer class="bg-blue-800 text-white py-8">
    <div class="container mx-auto px-4 text-center">
        <p>&copy; 2025 Passi City College. All rights reserved.</p>
        <p class="mt-2">Passi City, Iloilo, Philippines | Phone: (123) 456-7890 | Email: info@passicitycollege.edu.ph</p>
    </div>
</footer>

